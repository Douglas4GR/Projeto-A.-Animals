@page "/"

@inject NavigationManager NavigationManager

<PageTitle>Home</PageTitle>
<div class="container-fluid">

    <div class="row">
        @for (int i = 0; i < NumeroAnuncios; i++)
        {
            <div class="col-lg-3 col-md-3 col-sm-12 mt-3">
                <NavLink class="text-decoration-none" href="@($"/anuncio/{i}")">
                    <AnuncioComponent AnuncioID="@i" />
                </NavLink>
            </div>
        }
    </div>
</div>

@code {
    private int NumeroAnuncios = 10;
}