@page "/mensagens"

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="overflow-auto" style="max-height: 600px;">
            @foreach (var mensagem in mensagens)
            {
                <div class="col-lg-10 col-sm-12 mt-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-1" style="height: 40px; width: 40px;border-radius: 50%; background-color:@mensagem.Cor;">
                                </div>
                                <div class="col-3">
                                    <h5>@mensagem.Nome</h5>
                                </div>
                                <div class="col-8">
                                    <p class="text-end">@mensagem.Texto</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

