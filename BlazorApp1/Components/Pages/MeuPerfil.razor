@page "/meuperfil"

<div class="container mt-3 mb-5">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <img src="@ImagemPerfil" class="card-img-top" alt="Imagem de perfil">
                <div class="card-body text-center">
                    <h5 class="card-title">@Nome</h5>
                    <p class="card-text">@Descricao</p>
                    <a href="@LinkedIn" class="btn btn-primary" target="_blank">LinkedIn</a>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5>Informações Pessoais</h5>
                </div>
                <div class="card-body">
                    <p><strong>Email:</strong> @Email</p>
                    <p><strong>Telefone:</strong> @Telefone</p>
                    <p><strong>Endereço:</strong> @Endereco</p>
                </div>
            </div>
            <div class="card mt-4">
                <div class="card-header">
                    <h5>Sobre Mim</h5>
                </div>
                <div class="card-body">
                    <p>@SobreMim</p>
                </div>
            </div>
            <div class="card mt-4">
                <div class="card-header">
                    <h5>Historico de Anúncios visitados</h5>
                </div>
                <div class="card-body">
                    <ul>
                        @foreach (var itemHist in Historico)
                        {
                            <li>@itemHist</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private string ImagemPerfil = "https://via.placeholder.com/150"; // URL da imagem de perfil
    private string Nome = "Douglas";
    private string Descricao = "Profissional de TI";
    private string LinkedIn = "https://www.linkedin.com/in/seu-perfil";
    private string Email = "seu.email@exemplo.com";
    private string Telefone = "(99) 99999-9999";
    private string Endereco = "Rua Exemplo, 123, Cidade, País";
    private string SobreMim = "Sou um profissional dedicado com experiência em desenvolvimento de software e paixão por aprender novas tecnologias.";
    private List<string> Historico = new List<string>
    {
        "Bob",
        "Pipi",
        "Clotilde",
        "JavaScript",
        "SQL",
        "HTML",
        "Dona florinda",
        "Toto"
    };
}
