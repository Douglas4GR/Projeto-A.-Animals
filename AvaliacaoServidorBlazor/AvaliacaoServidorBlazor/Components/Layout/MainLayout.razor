@inherits LayoutComponentBase
@inject ClientApiCicloAvaliativo cliente
@inject ClientApiPainelAviso painelAviso
@using BlazorStrap
@using System.Security
@using HttpClientService
@inject IBlazorStrap _blazorStrap

<div class="page">
    <div style="background-image: linear-gradient(180deg, #4c78d3 0%, #224283 70%);">
        <NavMenu />
    </div>
    <main style="background: linear-gradient(225deg, #224283, #000);">
        <div class="top-row px-4">
            <h6>Avaliação de Servidores</h6>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred (um erro ocorreu aqui.).
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>